{
    "manifest_version": 3,
    "name": "Co Writer",
    "version": "1.0.0",
    "description": "An utility leverages ChatGPT model to rephrase any selected text.",
    "icons": {
      "48": "icon.png"
    },
    "permissions": ["storage", "scripting"],
    "background": {
      "service_worker": "background.bundle.js"
    },
    "host_permissions": [
      "*://*/*"
    ],
    "action": {
      "default_popup": "index.html",
      "default_icon": {
        "48": "icon.png"
      }
    },
    "options_page": "options.html"
  }
  